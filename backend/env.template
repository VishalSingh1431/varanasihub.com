# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=5000

# ============================================
# POSTGRESQL DATABASE (AIVEN)
# ============================================
# Option 1: Use Aiven Service URI (RECOMMENDED - Paste your Service URI here)
DATABASE_URL=postgres://avnadmin:YOUR_PASSWORD@YOUR_HOST.a.aivencloud.com:12345/defaultdb?sslmode=require

# Option 2: Use Individual Variables (if not using Service URI above)
# DB_HOST=your-aiven-host.a.aivencloud.com
# DB_PORT=12345
# DB_NAME=defaultdb
# DB_USER=avnadmin
# DB_PASSWORD=your-password
# DB_SSL=true

# ============================================
# JWT AUTHENTICATION
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-characters

# ============================================
# GOOGLE OAUTH
# ============================================
GOOGLE_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com

# ============================================
# EMAIL CONFIGURATION (for OTP)
# ============================================
# Option 1: Gmail (Recommended for development)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-gmail-app-password

# Option 2: Custom SMTP (Alternative - uncomment if using)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-smtp-username
# SMTP_PASS=your-smtp-password
# SMTP_SECURE=false

# ============================================
# CLOUDINARY (Image Uploads)
# ============================================
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# ============================================
# DOMAIN CONFIGURATION
# ============================================
BASE_DOMAIN=varanasihub.com

